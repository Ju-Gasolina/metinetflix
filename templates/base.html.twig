{% set currentRoute = app.request.pathinfo %}

{% if is_granted('ROLE_USER') %}

    <div> CONNECTED </div>

{% endif %}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="/css/sidebar.css">
        <link rel="stylesheet" href="/bower_components/bootstrap-horizon/bootstrap-horizon.css">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css" rel="stylesheet" crossorigin="anonymous">
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    {% endblock %}
</head>
<body id="body" class="background-custom">
<header>
    <nav class="navbar navbar-dark bg-dark box-shadow">
        <div class="container py-3">
            <a href="/" class="nav col-12 col-lg-auto my-2
                    justify-content-center my-md-0 h2 navbar-title-custom" id="application">MetinetFlix</a>
            <ul class="nav col-12 col-lg-auto my-2
                        justify-content-center my-md-0 h6">
                <li>
                    <a href="/" class="nav-link nav-bar-text
                        {% if currentRoute  == '/' %} text-secondary {% endif %}">
                        <i class="bi bi-house"></i>
                        Accueil
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_catalog_index') }}" class="nav-link nav-bar-text
                         {% if '/catalog' in currentRoute %} text-secondary {% endif %}">
                        <i class="bi bi-view-list"></i>
                        Catalogue
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_serie_index') }}" class="nav-link nav-bar-text
                        {% if '/serie' in currentRoute %} text-secondary {% endif %}">
                        <i class="bi bi-collection-play"></i>
                        Séries
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_movie_index') }}" class="nav-link nav-bar-text
                        {% if '/movie' in currentRoute %} text-secondary {% endif %}">
                        <i class="bi bi-film"></i>
                        Films
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_saga_index') }}" class="nav-link nav-bar-text
                        {% if '/saga' in currentRoute %} text-secondary {% endif %}">
                        <i class="bi bi-collection"></i>
                        Sagas
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_saga_fill_db', {'popularPage': 1}) }}" class="nav-link nav-bar-text
                        {% if currentRoute  == '/' %} text-secondary {% endif %}">
                        <i class="bi bi-download"></i>
                        Remplissage BDD (sagas)
                    </a>
                </li>
                <li>
                    <div class="dropdown">
                        <button class="button-basic-custom dropdown-toggle h6 mx-3" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                            Mon compte
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                            <li><a class="dropdown-item active" href="{{ path('app_watchlist_index') }}">Watchlist</a></li>
                            <li><a class="dropdown-item" href="#">Profil</a></li>
                            <li><a class="dropdown-item" href="#">Paramètre de compte</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_logout') }}">Se deconnecter</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <div id="nav-btn" class="d-flex flex-column h-100 align-content-center">
                        <a href="#" class="button-basic-custom" id="liveToastBtn">Se connecter</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
</header>

<main  id="main" style="min-height: 100vh">
    {% block main %}{% endblock %}
</main>

<footer class="py-3 py-4 bg-dark">
    <div class="container">
        <nav>
            <ul class="nav justify-content-center">
                <li class="nav-item"><a href="\" class="nav-link
                                px-2 text-white">Accueil</a></li>
                <li class="nav-item"><a href="#" class="nav-link
                                px-2 text-white">???</a></li>
                <li class="nav-item"><a href="#" class="nav-link
                                px-2 text-white">???</a></li>
            </ul>
        </nav>
        <nav>
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                <li class="nav-item"><a href="#" class="nav-link
                                px-2 text-white"><i class="bi bi-facebook"></i> Facebook</a></li>
                <li class="nav-item"><a href="#" class="nav-link
                                px-2 text-white"><i class="bi bi-instagram"></i> Instagram</a></li>
                <li class="nav-item"><a href="#" class="nav-link
                                px-2 text-white"><i class="bi bi-twitter"></i> Twitter</a></li>
            </ul>
        </nav>
        <p class="text-center text-white">© Copyright 2022 - ZAIR Hédi & CARRA Justin</p>
    </div>
</footer>
</body>
</html>
