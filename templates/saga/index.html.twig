{% extends 'base.html.twig' %}

{% block title %}Saga index{% endblock %}

{% block body %}
    <h1>Saga index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for saga in sagas %}
            <tr>
                <td>{{ saga.id }}</td>
                <td>{{ saga.name }}</td>
                <td>
                    <a href="{{ path('app_saga_show', {'id': saga.id}) }}">show</a>
                    <a href="{{ path('app_saga_edit', {'id': saga.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_saga_new') }}">Create new</a>
{% endblock %}
