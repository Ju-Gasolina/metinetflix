{% extends 'base.html.twig' %}

{% block title %}Saga{% endblock %}

{% block main %}
    <img class="image-rognage" src="{{ saga.backdrop_path }}" alt="{{ saga.name }}">

    <img class="poster-on-banner" src="{{ saga.poster_path }}" alt="{{ saga.name }}">

    <div class="d-flex flex-column justify-content-center align-items-center">
        <div  id="title-for-poster-on-banner" class="card box-shadow translate-title-for-poster-on-banner">
            <div class="card-header border-0">
                <h1 class="text-dark text-center mt-2 h3">{{ saga.name }}</h1>
            </div>
        </div>

        <a href="{{ path('app_watchlist_item_new', {type: saga.type, idTMDB: saga.id}) }}" title="Ajouter Ã  votre watchlist" class="bi bi-heart text-danger translate-title-for-poster-on-banner h3 mt-3"></a>
    </div>

    <div class="translate-block-for-poster-on-banner">
        <div class="container pb-5 pt-5">
            <div class="row">
                <div class="col-lg-6 col-sm">
                    <div>
                        <div class="card-deck mb-3">
                            <div class="card mb-4 box-shadow box-min-height">
                                <div class="card-header">
                                    <p class="text-center my-0 font-weight-normal h4">Informations</p>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled text-start m-0">
                                        <li>Nom de la saga : {{ saga.name }}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-sm">
                    <div>
                        <div class="card-deck mb-3">
                            <div class="card mb-4 box-shadow box-min-height">
                                <div class="card-header">
                                    <p class="text-center my-0 font-weight-normal h4">Description</p>
                                </div>
                                <div class="card-body">
                                    <p class="justify mb-0">{{ saga.overview }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{ component('horizontal-carousel', {
                title: 'Films',
                items: saga.movies
            }) }}
        </div>
    </div>
{% endblock %}
