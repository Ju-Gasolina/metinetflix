{% extends 'base.html.twig' %}

{% block title %}Catalog{% endblock %}

{% block main %}

    <div class="container pb-5 pt-5">
        <div class="row">
            {% for card in catalog %}
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card text-center">
                        <a href="{{ path(card.pathName, {id: card.id}) }}" title="Cliquez pour voir les informations détaillées">
                            <img class="card-img-top" src="{{ card.posterPath }}" alt="{{ card.title }}">
                        </a>
                        <div class="card-body">
                            <p class="card-title h5">{{ card.title }}</p>
                            <p class="card-text">{{ card.releaseDate }}</p>
                            <a href="{{ path('app_watchlist_item_new', {type: card.type, idTMDB: card.id}) }}" title="Ajouter à votre watchlist" class="bi bi-heart text-danger"></a>
                        </div>
                    </div>
                </div>




            {% endfor %}


        </div>
    </div>

    <div class="bottom-buttons">
        <a href="{{ path('app_catalog_index', {page: currentPage - 1}) }}" class="previous round">&#8249;</a>
        <a href="{{ path('app_catalog_index', {page: currentPage + 1}) }}" class="next round">&#8250;</a>
    </div>
{% endblock %}
