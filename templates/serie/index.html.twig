{% extends 'base.html.twig' %}

{% block title %}Serie index{% endblock %}

{% block main %}
    <div class="container pb-5 pt-5">
        <div class="row">
            {% for serie in series %}
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card text-center">
                        <a href="{{ path('app_serie_show', {id: serie.id}) }}" title="Cliquez pour voir les informations détaillées de cette série">
                            <img class="card-img-top" src="{{ serie.poster_path }}" alt="{{ serie.name }}">
                        </a>
                        <div class="card-body">
                            <p class="card-title h5">{{ serie.name }}</p>
                            <p class="card-text">{{ serie.first_air_date }}</p>
                            <a href="#" title="Ajouter cette série à votre watchlist" class="bi bi-heart text-danger"></a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}