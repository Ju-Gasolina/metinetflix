{% extends 'base.html.twig' %}

{% block title %}Serie index{% endblock %}

{% block main %}
    <h1>Serie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for serie in series %}
            <tr>
                <td>{{ serie.name }}</td>
                <td>{{ serie.first_air_date }}</td>
                <td><img src="{{ serie.poster_path }}"> </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_serie_new') }}">Create new</a>
{% endblock %}
