<div class="row watchlist-card">
    <div class="col-1 ">
        <a href="{{ path(this.pathName, {id: this.idTMDB}) }}" title="Cliquez pour voir les informations détaillées">
            <img class="" src="{{ this.posterPath }}" alt="{{ this.title }}">
        </a>
    </div>

    <div class="col-10 watchlist-card-infos">
        <div class="d-flex flex-row ">
            <i class="me-3 bi bi-collection-play text-light h3"></i>
            <h4 class="text-truncate ">{{ this.title }}</h4>
        </div>

        <a href="{{ path('app_watchlist_item_show', {id: this.id}) }}" title="Cliquez pour voir mes informations sur cet item">Voir mes informations sur cet item</a>
    </div>

    <div class="col-1 d-flex flex-row justify-content-end ">
        <a href="#">
            <i class="bi bi-x text-light h3"></i>
        </a>

{#        <i class="mx-4 bi bi-collection-play text-light h3"></i>#}
    </div>
</div>