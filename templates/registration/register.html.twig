{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block main %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}



    <section class="vh-100 ">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100  ">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5 ">
                    <div class="card bg-dark text-white log-container" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="log-title text-uppercase">Register</h2>
                                <p class="text-white-50 mb-5">Please enter your informations!</p>


                                {{ form_start(registrationForm) }}
                                <div class="form-floating mb-3">
                                    {{ form_widget(registrationForm.email) }}
                                    {{ form_label(registrationForm.email) }}

                                </div>
                                <div class="form-floating mb-3">
                                    {{ form_widget(registrationForm.plainPassword) }}
                                    {{ form_label(registrationForm.plainPassword) }}

                                </div>
                                <div class="form-floating mb-3">
                                    {{ form_widget(registrationForm.username) }}
                                    {{ form_label(registrationForm.username) }}

                                </div>
                                <div class="form-floating mb-3">
                                    {{ form_widget(registrationForm.firstname) }}
                                    {{ form_label(registrationForm.firstname) }}

                                </div>
                                <div class="form-floating mb-3">
                                    {{ form_widget(registrationForm.lastname) }}
                                    {{ form_label(registrationForm.lastname) }}

                                </div>

                                    {{ form_row(registrationForm.birthday) }}
                                    {{ form_row(registrationForm.gender) }}
                                    {{ form_row(registrationForm.agreeTerms) }}

                                <button type="submit" class="btn btn-dark">Register</button>
                                {{ form_end(registrationForm) }}

                                <div class="log-form-logo d-flex justify-content-center text-center mt-4 pt-1">
                                    <a href="#!"><i class="bi bi-facebook "></i></a>
                                    <a href="#!"><i class="bi bi-twitter mx-4 px-2"></i></a>
                                    <a href="#!"><i class="bi bi-google "></i></a>
                                </div>

                            </div>

                            <div>
                                <p class="mb-0">Already have an account? <a href="{{ path('app_login') }}"
                                                                          class="log-signup-link">Sign In</a>
                                </p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
