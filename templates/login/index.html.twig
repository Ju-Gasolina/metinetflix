{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block main %}

    {% if error %}
        <div class="alert alert-danger mt-3 mx-5" role="alert">
            {{ error.message }}
        </div>
    {% endif %}




    <section>
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100  ">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5 ">
                    <div class="card bg-dark text-white log-container" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="log-title text-uppercase">Login</h2>
                                <p class="text-white-50 mb-5">Please enter your login and password!</p>

                                <form action="{{ path('app_login') }}" method="post">
                                    <div class="form-floating mb-3">
                                        <input placeholder="name@example.com" class="form-control" type="email" id="username" name="_username" value="{{ last_username }}">
                                        <label class="log-form-label" for="username">Email</label>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input  placeholder="*******" class="form-control" type="password" id="password" name="_password">
                                        <label class="log-form-label" for="password">Password</label>
                                    </div>

                                    <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>

                                    <button class="log-button-basic-custom" type="submit">Login</button>

                                </form>


                                <div class="custom-logo d-flex justify-content-center text-center mt-4 pt-1">
                                    <a href="#!"><i class="bi bi-facebook "></i></a>
                                    <a href="#!"><i class="bi bi-twitter mx-4 px-2"></i></a>
                                    <a href="#!"><i class="bi bi-google "></i></a>
                                </div>

                            </div>

                            <div>
                                <p class="mb-0">Don't have an account? <a href="{{ path('app_register') }}" class="log-signup-link">Sign Up</a>
                                </p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}
